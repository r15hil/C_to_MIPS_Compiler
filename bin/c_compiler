#!/bin/bash

# Option String
LONG=translate:
SHORT=o:

OPTS=$(getopt --options $SHORT --long $LONG --name "$1" -- "$@")

eval set -- "$OPTS"

while true ; do
  case "$1" in
    --translate )
      TRANSLATE=true
      INFILE="$2"
      shift 2
      ;;
    -o )
      OUTFILE="$2"
      shift 2
      ;;
    -- )
      shift
      break
      ;;
    *)
      echo "Internal error!"
      exit 1
      ;;
  esac
done
if [ "$TRANSLATE" == "true" ] ; then
  cat "$INFILE" | bin/print_canonical > "$OUTFILE"
fi

